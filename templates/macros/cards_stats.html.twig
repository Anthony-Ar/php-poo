{% macro card_stats(number, icon, text) %}
	<div class="card blue-grey lighten-5 card-margin-bottom">
		<div class="card-content">
			<span class="card-title margin-bottom-0 {% if number|length > 0 %}green-text text-darken-2{% endif %}">
				<i class="material-icons small right">{{ icon }}</i>
				<b>{{ number }}</b>
				{{ text }}
			</span>
		</div>
	</div>
{% endmacro %}